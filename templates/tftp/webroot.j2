<VirtualHost *:{{ dnsmasq_tftp_web_port }}>
    ServerName tftp.{{ dnsmasq_domain_name }}
    ServerAdmin webmaster@example.com

    DocumentRoot /tftp/webroot
    Alias /webroot /tftp/webroot

    <Directory />
        Options FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    ErrorLog /var/log/apache2/tftp_error.log
    CustomLog /var/log/apache2/tftp_access.log combined
    LogLevel {{ dnsmasq_tftp_web_loglevel }}
</VirtualHost>
